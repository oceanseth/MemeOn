{
  "name": "memeon",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm run dev --prefix web",
    "dev:api": "npm run dev --prefix api",
    "build": "npm run build:web && npm run bundle:api",
    "build:web": "npm run build --prefix web",
    "bundle:api": "npm run package --prefix api",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.3.3"
  }
}

