{
  "name": "memeon-api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "tsx watch src/local-server.ts",
    "build": "tsc --project tsconfig.json",
    "bundle": "esbuild src/handler.ts --bundle --platform=node --target=node20 --outfile=dist/handler.mjs --format=esm --external:@aws-sdk/*",
    "package": "npm run bundle && bestzip lambda.zip dist/handler.mjs",
    "clean": "rimraf dist lambda.zip"
  },
  "dependencies": {
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/aws-lambda": "^8.10.147",
    "@types/node": "^20.17.12",
    "bestzip": "^2.2.1",
    "esbuild": "^0.24.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "~5.9.3"
  }
}

